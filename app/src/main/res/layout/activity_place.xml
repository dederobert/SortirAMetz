<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/place_main_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    tools:context="a1819.m2ihm.sortirametz.PlaceActivity" >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_name">

        <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_name"
                android:labelFor="@+id/edt_name"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_toEndOf="@id/lbl_name"
                android:text="@string/name"
                android:ems="10"
                android:id="@+id/edt_name"
                />
    </RelativeLayout>
   <RelativeLayout
            android:id="@+id/lyt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_below="@id/lyt_name">
        <TextView
                android:text="@string/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_address"
                android:labelFor="@+id/edt_address"
                />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_toEndOf="@id/lbl_address"
                android:text="@string/address"
                android:ems="10"
                android:id="@+id/edt_address"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lyt_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_address">
        <TextView
                android:text="@string/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_category"
                android:labelFor="@+id/spi_category"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spi_category"
                android:layout_toEndOf="@id/lbl_category"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lyt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_category">
        <TextView
                android:text="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_description"
                android:labelFor="@+id/edt_description"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_below="@id/edt_description"
                android:id="@+id/edt_description" />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lyt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_description"
            >

        <ImageView
                android:layout_width="@dimen/place_icon_size"
                android:layout_height="@dimen/place_icon_size"
                app:srcCompat="@drawable/ic_help_black_24dp"
                android:contentDescription="@string/place_icon"
                android:id="@+id/img_icon"/>

        <TextView
                android:id="@+id/lbl_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_icon"
                android:text="@string/icon"
                android:labelFor="@+id/edt_icon"
                />
        <EditText
                android:id="@+id/edt_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:ems="10"
                android:layout_toEndOf="@id/lbl_icon"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lyt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_icon"
            >

        <Button
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save"/>

        <Button
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel"
                android:layout_toEndOf="@id/btn_save"
                />
    </RelativeLayout>
</RelativeLayout>